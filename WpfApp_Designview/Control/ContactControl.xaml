<UserControl x:Class="Wpf3_customControl.Control.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf3_customControl.Control"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="300" Height="65" Width="300" >
    <Button Background="Transparent" BorderThickness="0" HorizontalAlignment="Left">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="contactimage" Grid.Column="0" Height="60" Width="60"/>
            <StackPanel Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"> 
                <TextBlock x:Name="Contactname"  FontSize="14" HorizontalAlignment="Center" FontWeight="Normal"/>
                <TextBlock x:Name="ContactRole"  FontSize="12" FontStyle="Italic" Foreground="#FF7A7A7A"/>

            </StackPanel>
        </Grid>
    </Button>


</UserControl>
